<!DOCTYPE html>
<html>
  <head>
    <%- include('partials/headInfo') %>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/js/bootstrap.bundle.min.js" integrity="sha384-ka7Sk0Gln4gmtz2MlQnikT1wXgYsOg+OMhuP+IlRH9sENBO0LRn5q+8nbTov4+1p" crossorigin="anonymous"></script>
    <title><%= teamName %> Roster</title>
  </head>
  <body class="m-3">
    <header>
        <img src="https://upload.wikimedia.org/wikipedia/en/thumb/a/a6/Major_League_Baseball_logo.svg/1200px-Major_League_Baseball_logo.svg.png" height="50">
        <h1><%= teamName %> Roster</h1>
    </header>
    
    <table class='table table-hover table-striped'>
        <thead>
            <tr>
                <th scope="col">#</th>
                <th scope="col">Name</th>
                <th scope="col">Birthday</th>
                <th scope="col">Height</th>
                <th scope="col">Weight</th>
                <th scope="col">Position</th>
                <th scope="col">Throws</th>
                <th scope="col">Bats</th>
            </tr>
        </thead>
        <tbody>
            <% for (i = 0; i < players.length; i++) { %>
                <tr>
                    <th scope="row"><%= players[i].jersey_number %></th>
                    <td>
                        <a href="#" id='<%= players[i].player_id %>'><%= players[i].name_first_last %></a>
                    </td>
                    <td><%= players[i].birth_date.substring(0,10) %></td>
                    <td><%= players[i].height_feet %>'<%= players[i].height_inches %>"</td>
                    <td><%= players[i].weight %></td>
                    <td><%= players[i].primary_position %></td>
                    <td><%= players[i].throws %></td>
                    <td><%= players[i].bats %></td>
                </tr>
            <% } %>
        </tbody>
    </table>
    
    <div id="authorModal" class="modal" tabindex="-1">
        <div class="modal-dialog">
            <div class="modal-content">
                <div class="modal-header">
                    <h5 class="modal-title"></h5>
                    <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
                </div>
                <div class="modal-body">
                    <div id="playerInfo"> </div>
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Close</button>
                </div>
            </div>
        </div>
    </div>
    
    <script src="/js/rosterFuncs.js"></script>
  </body>
</html>